extends ../layout

block content
  div.admin
    h3
      a(href='/') Home
        img(src='/images/RainbowStar.gif-c200' width='25px') 
  if book
    h1= book.title
    
    img(src='#{book.url}')
    
    p= book.description
    
    h2 Author
    if authors
      for author in authors
        h3 
          a(href='/authors/profile/#{author.id}') #{author.first} #{author.last}
    
    
  
        
